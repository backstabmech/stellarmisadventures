<div class="stellarmisadventures chat-card item-card" data-actor-id="{{actor._id}}" data-item-id="{{item._id}}"
     {{#if tokenId}}data-token-id="{{tokenId}}"{{/if}}>
    {{!-- Header: image, title, and name stuff--}}
    <header class="card-header flexrow">
        <img src="{{item.img}}" title="{{item.name}}" width="36" height="36"/>
        <h3 class="item-name">{{item.name}}</h3>
    </header>

    <div class="card-content">
        {{{item.system.description}}}
    </div>

    {{!-- All the buttons --}}
    <div class="card-buttons">
        {{#if hasAttack}}<button data-action="attack">{{ localize "STELLARMISADVENTURES.Attack" }}</button>{{/if}}

        {{#if data.damageFormula}}
        <button data-action="damageFormula">
            {{#if isHealing}}{{ localize "STELLARMISADVENTURES.Healing" }}
            {{else}}{{localize "STELLARMISADVENTURES.Damage" }}{{/if}}
        </button>
        {{/if}}

        {{#if hasSave}}
        <button data-action="save" data-ability="{{data.save.ability}}">
            {{ localize "STELLARMISADVENTURES.SavingThrow" }} {{labels.save}}
        </button>
        {{/if}}

        {{#if data.formula}}
        <button data-action="data.formula">{{localize "STELLARMISADVENTURES.OtherFormula"}}</button>
        {{/if}}
    
    </div>
    <footer class="card-footer">
        {{#each data.properties}}
        <span>{{this}}</span>
        {{/each}}
    </footer>
</div>