<section class="grid grid-3col">
  <aside class="sidebar">

    {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
    use both the "grid" and "grid-Ncol" class where "N" can be any number
    from 1 to 12 and will create that number of columns.  --}}
    <div class="abilities flexcol">
      {{#each system.abilities as |ability key|}}
      <div class="ability flexrow flex-group-center">
        <label for="system.abilities.{{key}}.value" class="resource-label rollable flexlarge align-left" data-roll="d20+@abilities.{{key}}.mod" data-label="{{ability.label}}">{{ability.label}}</label>
        <input type="text" name="system.abilities.{{key}}.value" value="{{ability.value}}" data-dtype="Number"/>
        <span class="ability-mod rollable" data-roll="d20+@abilities.{{key}}.mod" data-label="{{ability.label}}">{{numberFormat ability.mod decimals=0 sign=true}}</span>
      </div>
      {{/each}}
    </div>

  </aside>
  <aside class="sidebar">
    {{!-- Skills  --}}
    <div class="abilities flexcol">
      {{#each system.skills as |skill key|}}
      <div class="ability flexrow flex-group-center">
        <label for="system.skills.{{key}}.points" class="resource-label rollable flexlarge align-left" data-roll="d20+@skills.{{key}}.mod" data-label="{{skill.label}}">{{skill.label}}</label>
        <input type="text" name="system.skills.{{key}}.points" value="{{skill.points}}" data-dtype="Number"/>
        <span class="ability-mod rollable" data-roll="d20+@skills.{{key}}.mod" data-label="{{skill.label}}">{{numberFormat skill.mod decimals=0 sign=true}}</span>
      </div>
      {{/each}}
    </div>
  </aside>
  {{!-- For the main features list, span the right two columns --}}
  <section class="main">
    <ol class="items-list">
      <li class="item flexrow items-header">
        <div class="item-name">Name</div>
        <div class="item-controls">
          <a class="item-control item-create" title="Create item" data-type="feature"><i class="fas fa-plus"></i> Add item</a>
        </div>
      </li>
      {{#each features as |item id|}}
        <li class="item flexrow" data-item-id="{{item._id}}">
          <div class="item-name">
            <div class="item-image">
              <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
            </div>
            <h4 class="item-edit">{{item.name}}</h4>
          </div>
          <div class="item-controls">
            <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
          </div>
        </li>
      {{/each}}
    </ol>
  </section>
</section>



