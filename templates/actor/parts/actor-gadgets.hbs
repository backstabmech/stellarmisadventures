<div class="resource-label flexrow flex-group-center">
  <label>Ability</label>
    <select name="system.gadgetry.ability">
      {{selectOptions config.abilities selected=system.gadgetry.ability localize=true}}
    </select>
  <label>Save DC</label>
  <input type="text" name="system.gadgetry.dc" value={{system.gadgetry.dc}} {{#if isCharacter}}disabled{{/if}} data-dtype="Number"/>
  
  <label for="system.gadgetry.attack">Attack Bonus</label>
  <input type="text" name="system.gadgetry.attack" value={{system.gadgetry.attack}} {{#if isCharacter}}disabled{{/if}} data-dtype="Number"/>
  <label for="system.gadgetry.maxTier">Max Tier</label>
  <input type="text" name="system.gadgetry.maxTier" value={{system.gadgetry.maxTier}} data-dtype="Number"/>

  <label for="system.gadgetry.points.value" class="resource-label">Gadget Points</label>
  <input type="text" name="system.gadgetry.points.value" value={{system.gadgetry.points.value}} data-dtype="Number"/>
  <span>/</span>
  <input type="text" name="system.gadgetry.points.max" value={{system.gadgetry.points.max}} data-dtype="Number"/>
</div>
<ol class="items-list">
  {{#each gadgets as |gadgets gadgetTier|}}
    <li class="item flexrow items-header">
      <div class="item-name">Tier {{gadgetTier}} Gadgets</div>
      <div class="item-prop">Range</div>
      <div class="item-prop">Use Time</div>
      <div class="item-controls">
        <a class="item-control item-create" title="Create item" data-type="gadget" data-gadget-tier="{{gadgetTier}}"><i class="fas fa-plus"></i> Add Tier {{gadgetTier}}</a>
      </div>
    </li>
    {{#each gadgets as |item id|}}
      <li class="item flexrow" data-item-id="{{item._id}}">
        <div class="item-name flexrow">
          <div class="item-image">
            <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
          </div>
          <a class="item-edit">{{item.name}}</a>
        </div>
        <div class="item-prop">{{item.system.range}}</div>
        <div class="item-prop">{{item.system.useTime}}</div>
        <div class="item-controls">
          <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
        </div>
      </li>
    {{/each}}
  {{/each}}
</ol>